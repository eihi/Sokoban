<Window x:Class="Sokoban.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Background="Black">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Height="24" VerticalAlignment="Center">
            <MenuItem Header="_Start" Height="24">
                <MenuItem Header="_Level 1" Click="Button_Click_1"/>
                <Separator/>
                <MenuItem Header="_Close" Click="CloseLevelButton"/>
            </MenuItem>
            <MenuItem Header="_Highscores" Height="24"/>
            <Label x:Name="verstrekenTijd" VerticalAlignment="Center" Margin="0"/>
            <Label x:Name="aantalZetten" ></Label>

        </Menu>
        <StackPanel>
            <Grid>
                <Grid x:Name="VakkenView"/>
                <Grid x:Name="SpeelBord"/>
            </Grid>
        </StackPanel>
    </DockPanel>
    
</Window>
