<Window x:Class="Sokoban.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Background="Black">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Play">
                <MenuItem Header="_Start Level 1" Click="Button_Click_1"/>
                <Separator/>
                <MenuItem Header="_Close"/>
            </MenuItem>
            <MenuItem Header="_Highscores">
                
            </MenuItem>
            <Label x:Name="verstrekenTijd" Content="Tijd: 0" MouseUp="tijd"/>
            <Label x:Name="aantalZetten" Content="Zetten: 0"></Label>

        </Menu>
        <StackPanel>
            <Grid Name="VakkenView"></Grid>
        </StackPanel>
    </DockPanel>
    
</Window>
